{% extends "layout.njk" %}
{% block content %}
  <div class="card">
    <section
      class="avatar"
      style="background: url({{ member.avatar_url }}) no-repeat center center/ cover"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Membro</div>
        <div>{{member.name}}</div>
      </div>
      <div class="item">
        <div>Email</div>
        <div>{{member.email}}</div>
      </div>
      <div class="item">
        <div>Idade</div>
        <div>{{member.age}}</div>
      </div>
      <div class="item">
        <div>Sexo</div>
        <div>{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
      </div>
      <div class="item">
        <div>Tipo sangu√≠neo</div>
        <div>
          {{ "A" if member.blood == "A1"}}
          {{ "A-" if member.blood == "A0"}}
          {{ "B" if member.blood == "B1"}}
          {{ "B-" if member.blood == "B0"}}
          {{ "AB-" if member.blood == "AB0"}}
          {{ "AB" if member.blood == "AB1"}}
          {{ "O" if member.blood == "O1"}}
          {{ "O-" if member.blood == "O0"}}
        </div>
      </div>
      <div class="item">
        <div>Peso</div>
        <div>{{member.weight}}</div>
      </div>
      <div class="item">
        <div>Altura</div>
        <div>{{member.height}}</div>
      </div>

      <a href="/members/{{ member.id }}/edit" class="button">Editar</a>
    </section>
  </div>
{% endblock content %}