{% extends "layout.njk" %}
{% block content %}
  <form class="card" method="post" action="/instructors">
    <section
      class="avatar"
      style="background: url(https://source.unsplash.com/collection/3465564) no-repeat center center/ cover"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Avatar URL</div>
        <input type="url" name="avatar_url" placeholder="http://"/>
      </div>
      <div class="item">
        <div>Instrutor</div>
        <input type="text" name="name" placeholder="Nome do instrutor"/>
      </div>
      <div class="item">
        <div>Data de nascimento</div>
        <input type="date" name="birth"/>
      </div>
      <div class="item">
        <div>Sexo</div>
        <div>
          <span>
            <input type="radio" name="gender" value="M" checked="checked"/>Masculino
          </span>
          <span>
            <input type="radio" name="gender" value="F"/> Feminino
          </span>
        </div>
      </div>
      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Separe o serviço por vírgula"/>
        </div>
      </div>
      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock %}